-- [[ Zz205 Hub.pvp - Integrated Script Concept ]] --

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- 1. ตั้งค่าหน้าต่างเมนู (Window)
local Window = Rayfield:CreateWindow({
   Name = "Zz205 Hub.pvp | Hermanos'Dev Concept",
   LoadingTitle = "Initializing Systems...",
   ConfigurationSaving = { Enabled = false }
})

-- 2. สร้างแท็บตามรูปวาด (Tabs)
local CombatTab = Window:CreateTab("Combat", 4483362458)
local ESPTab = Window:CreateTab("Esp", 4483362458)

-- 3. ตัวแปรควบคุมระบบ (Variables)
_G.ShowFOV = false
_G.FOVRadius = 150
_G.MagicBullet = false
_G.ESPEnabled = false

-- 4. ฟังก์ชันวาดเส้นและวงกลม (Drawing Library)
local FOVCircle = Drawing.new("Circle")
FOVCircle.Thickness = 1
FOVCircle.Color = Color3.fromRGB(255, 255, 255)
FOVCircle.Filled = false

local function CreateTracer()
    local Line = Drawing.new("Line")
    Line.Color = Color3.fromRGB(255, 0, 0) -- เส้นสีแดงล็อกหัว
    Line.Thickness = 1.5
    return Line
end

-- 5. Combat Tab: ระบบล็อกและ FOV
CombatTab:CreateToggle({
   Name = "Show FOV",
   CurrentValue = false,
   Callback = function(Value) _G.ShowFOV = Value end,
})

CombatTab:CreateSlider({
   Name = "FOV Radius",
   Range = {0, 1000},
   Increment = 10,
   CurrentValue = 150,
   Callback = function(Value) _G.FOVRadius = Value end,
})

CombatTab:CreateToggle({
   Name = "Magic Bullet (Headshot)",
   CurrentValue = false,
   Callback = function(Value) _G.MagicBullet = Value end,
})

-- 6. ESP Tab: เส้นสีแดง Tracers
ESPTab:CreateToggle({
   Name = "Enable Red Tracers",
   CurrentValue = false,
   Callback = function(Value) _G.ESPEnabled = Value end,
})

-- 7. ระบบการทำงาน (Main Loop)
game:GetService("RunService").RenderStepped:Connect(function()
    -- อัปเดตวงกลม FOV
    FOVCircle.Visible = _G.ShowFOV
    FOVCircle.Radius = _G.FOVRadius
    FOVCircle.Position = game:GetService("UserInputService"):GetMouseLocation()
    
    -- ลอจิกการล็อกหัว (ในเชิงการแสดงผล)
    if _G.ESPEnabled then
        -- ในสคริปต์จริงส่วนนี้จะใช้หาผู้เล่นที่ใกล้ที่สุดและลากเส้นไปที่ Head
        -- นี่คือตัวอย่างคอนเซปต์การทำงาน
    end
end)

Rayfield:Notify({
   Title = "Success",
   Content = "Script Loaded Successfully",
   Duration = 5,
})
